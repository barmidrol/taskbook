<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="col-md-offset-2 col-md-12 col-lg-offset-3 col-lg-6">
 <div class="well profile">
  <div class="col-sm-12">
    <div class="col-xs-12">
      <div class="title">
        <% if @user == current_user %>
        <a href="#" class="themeURL" id="username" data-type="text" data-resource="user" data-name="name" data-url="<%= user_path(@user) %>" data-original-title="Enter username"><%= @user.name %></a>
        <% else %>
        <a href="#" class="themeURL"><%= @user.name %></a>
        <% end %>
      </div>
      <p><strong>Achievements: </strong>
      </p>
      <table class='table'>
      <tbody>
        <% @user.badges.each do |badge| %>
        <tr>
          <td><span class="tags"><%= badge.name %></span> </td>
          <td><%= badge.description %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <p><strong>Top tasks: </strong></p>
      <div class='top-tasks'>
      <table class='table'>
        <tbody>
          <% top_tasks(@user).each do |task| %>
          <tr>
            <td><span class='counter'><%= task_rating(task) %></span></td>
            <td><span class="label label-success counter"><%= task.users.count %></span></td>
            <td><%= link_to task.title, task_path(task) %></td>
            <td><div class='mini-counts'><%= task.created_at.to_formatted_s(:short) %> </div> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>             
  </div>            
  <div class="col-xs-12 divider text-center">
    <div class="col-xs-12 col-sm-6 emphasis">
      <h2><strong> <%= @user.rating %> </strong></h2>                    
      <p><small>Rating</small></p>
    </div>
    <div class="col-xs-12 col-sm-6 emphasis">
      <h2><strong><%= author_count(@user) %></strong></h2>                    
      <p><small>Tasks</small></p>
    </div>
  </div>                 
</div>

<div class="badge-hierarchy">

</div>

