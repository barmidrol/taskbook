<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: "form", class: "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">Resend confirmation instructions</h2>
  <%= bootstrap_devise_error_messages! %>
  <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control" %>
  <%= f.submit  t('.send_me_reset_password_instructions', :default => "Reset password"), class: "btn btn-lg btn-primary btn-block" %>
  <div class="login-help">
    <%= render "devise/shared/links" %>
  </div>
  <% end %>      
</div>

